<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.stephanie.fueltankchart.MainActivity">

    <TextView
        android:text="@string/tankHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:id="@+id/tankHeight"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textIsSelectable="false"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_alignStart="@+id/radioGroup1" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="300dp"
        android:layout_marginTop="15dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/tankHeight"
        android:layout_alignLeft="@+id/tankSize"
        android:layout_alignStart="@+id/tankSize">

        <RadioButton
            android:text="96''"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heightInches1"
            android:layout_weight="0.34"
            android:textSize="18sp" />

        <RadioButton
            android:text="120''"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heightInches2"
            android:textSize="18sp" />
    </RadioGroup>

    <Spinner
        android:layout_width="300dp"
        android:id="@+id/tankSize"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:text="@string/tankSize"
        android:spinnerMode="dialog"
        android:layout_below="@+id/radioGroup1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/tankDepthText"
        android:layout_alignStart="@+id/tankDepthText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tankDepthText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tankDepthValue"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:text="40"
        android:layout_marginLeft="15dp" />


    <SeekBar
       android:layout_width="50dp"
        android:layout_height="25dp"
        android:id="@+id/tankDepth"
        android:indeterminate="false"
        android:max="80"
        android:progress="40"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/tankDepthValue"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/tankDepthValue"
        android:layout_toEndOf="@+id/tankDepthValue"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tankDepthText"
        android:textSize="24sp"
        android:text="@string/tankDepthText"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tankSize"
        android:layout_alignLeft="@+id/tankDepthValue"
        android:layout_alignStart="@+id/tankDepthValue" />

    <TextView
        android:text="@string/totalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tankDepthValue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/totalText"
        android:textSize="24sp" />

    <TextView
        android:text=""
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/total"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/totalText"
        android:background="@android:color/darker_gray"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_alignRight="@+id/tankDepth"
        android:layout_alignEnd="@+id/tankDepth" />

    <TextView
        android:text="@string/tankSize"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tankSizeText"
        android:layout_alignTop="@+id/radioGroup1"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_alignStart="@+id/radioGroup1"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="@string/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
